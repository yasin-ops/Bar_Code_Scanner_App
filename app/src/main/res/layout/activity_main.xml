<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgpage"

        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="@drawable/images_scan_logo"
        app:civ_border_color="@android:color/holo_red_dark"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/subtitlepage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Scanner App"

        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="4"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardMaxElevation="@dimen/_10sdp">

        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"

            android:text="Scan Text Here..........."
            android:textAlignment="textStart"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_13sdp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/white"
        android:drawableLeft="@drawable/qrcode_logotwo"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center|left"
        android:singleLine="true"

        android:text="Scan Here"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewMainActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="2"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>


</LinearLayout>